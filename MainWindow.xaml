        <!--<Button x:Name="activate_Button" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="15" Content="一键激活" FontFamily="等线 Light" FontSize="20" Click="activate_Button_Click"></Button>-->
        <Label x:Name="activate_Button" Grid.Row="4" Grid.Column="5" Grid.ColumnSpan="1" Grid.RowSpan="2" Margin="5,15,5,10" Content="一键激活" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="#07c160" FontFamily="等线 Light" FontSize="20" MouseLeftButtonUp="activate_Button_MouseLeftButtonUp" Foreground="White" Cursor="Hand">
            <Label.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"></Setter>
                </Style>
            </Label.Resources>
        </Label>
        <Expander Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="4" Grid.RowSpan="4" Header="附加选项" FontFamily="等线 Light" FontSize="15" Margin="5" BorderBrush="LightGreen" BorderThickness="1.5" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <RibbonCheckBox x:Name="autoRenew_CheckBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Label="自动续签" KeyTip="A" Cursor="Hand" FontFamily="等线 Light" FontSize="12" IsChecked="True"></RibbonCheckBox>
                <RibbonCheckBox x:Name="autoUpdate_CheckBox" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Label="自动检查更新" KeyTip="A" Cursor="Hand" FontFamily="等线 Light" FontSize="12"></RibbonCheckBox>
            </Grid>
            <Expander.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"></Setter>
                </Style>
            </Expander.Resources>
        </Expander>
        <GroupBox Header="激活模式选项" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="4" FontFamily="等线 Light" FontSize="12" Margin="5" BorderThickness="1.5" BorderBrush="LightGreen">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <RibbonRadioButton x:Name="actWin_RadioButton" Grid.Column="0" Grid.RowSpan="2" Label="激活 Windows" SmallImageSource="/Images/Win10_Logo.png" FontFamily="等线 Light" FontSize="20" Foreground="SkyBlue" IsChecked="True" Cursor="Hand" CornerRadius="3"></RibbonRadioButton>
                <RibbonRadioButton x:Name="actOffice_RadioButton" Grid.Column="1" Grid.RowSpan="2" Label="激活 Office" SmallImageSource="/Images/Office19_Logo.png" FontFamily="等线 Light" FontSize="20" Foreground="Orange" Cursor="Hand" CornerRadius="3">></RibbonRadioButton>
            </Grid>
        </GroupBox>
        <GroupBox Header="服务器选择" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" Grid.RowSpan="2" Margin="5" BorderBrush="LightGreen" BorderThickness="1.5" FontFamily="等线 Light" FontSize="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <ComboBox x:Name="selectServer_ComboBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2" VerticalAlignment="Center" Margin="5" FontSize="16" FontFamily="等线 Light" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Anawaert KMS 服务器" IsSelected="True"></ComboBoxItem>
                    <ComboBox.Resources>
                        <Style TargetType="{x:Type ComboBox}">
                            <Setter Property="Background" Value="White"></Setter>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>
                <TextBox x:Name="addServerName_TextBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2" VerticalAlignment="Center" Margin="5" FontSize="16" FontFamily="等线 Light" VerticalContentAlignment="Center" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" Visibility="Hidden"></TextBox>
                <Button x:Name="addServerName_Button" Grid.Row="0" Grid.Column="4" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Width="25" Margin="10" Content="+" FontFamily="楷体" FontSize="16" Cursor="Hand" Click="addServerName_Button_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="3"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="deleteServerName_Button" Grid.Row="0" Grid.Column="4" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Right" Width="25" Margin="10" Content="-" FontFamily="楷体" FontSize="16" Cursor="Hand" Click="deleteServerName_Button_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="3"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </GroupBox>
        <GroupBox Header="系统信息" Grid.Column="1" Grid.Row="4" Grid.RowSpan="2" Grid.ColumnSpan="4" FontFamily="等线 Light" FontSize="12" Margin="5,5,5,10" BorderThickness="1.5" BorderBrush="LightGreen" Cursor="">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="2.75*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label x:Name="winVersion_Label" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="等线 Light" FontSize="12" Foreground="SkyBlue"></Label>
                <Label x:Name="officeVersion_Label" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="等线 Light" FontSize="12" Foreground="Orange"></Label>
                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="等线 Light" FontSize="12" Foreground="SkyBlue" Content="Windows 版本"></Label>
                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="等线 Light" FontSize="12" Foreground="Orange" Content="Office 版本"></Label>
            </Grid>
        </GroupBox>
        <GridSplitter Grid.Column="0" Grid.RowSpan="5" BorderBrush="LightGray" BorderThickness="1.5" Margin="0,10,0,10"/>
        <GridSplitter Grid.Column="4" Grid.RowSpan="5" BorderBrush="LightGray" BorderThickness="1.5" Margin="0,10,0,10"/>

        <!--<Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="激活模式" FontSize="12" FontFamily="等线 Light"></Label>-->
    </Grid>
</Window>
