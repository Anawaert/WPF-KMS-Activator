        <Button x:Name="activate_Button" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="15" Content="一键激活" FontFamily="等线 Light" FontSize="20" Click="activate_Button_Click"></Button>
        <Expander Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="3" Header="附加选项" FontFamily="等线 Light" FontSize="15" Margin="15" BorderBrush="LightGreen" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <RibbonCheckBox x:Name="autoRenew_CheckBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Center" Label="自动续签" KeyTip="A" Cursor="Hand" FontFamily="等线 Light" FontSize="15" IsChecked="True"></RibbonCheckBox>
                <RibbonCheckBox x:Name="autoUpdate_CheckBox" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Center" Label="自动检查更新" KeyTip="A" Cursor="Hand" FontFamily="等线 Light" FontSize="15"></RibbonCheckBox>
            </Grid>
        </Expander>
        <RibbonRadioButton x:Name="actWin_RadioButton" Grid.Column="2" Grid.ColumnSpan="2" Label="激活 Windows" SmallImageSource="/Images/Win10_Logo.png" FontFamily="等线 Light" FontSize="20" Foreground="SkyBlue" IsChecked="True" Cursor="Hand"></RibbonRadioButton>
        <RibbonRadioButton x:Name="actOffice_RadioButton" Grid.Column="4" Grid.ColumnSpan="2" Label="激活 Office" SmallImageSource="/Images/Office19_Logo.png" FontFamily="等线 Light" FontSize="20" Foreground="Orange" Cursor="Hand"></RibbonRadioButton>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Content="激活模式" FontSize="15" FontFamily="等线 Light"></Label>
    
    </Grid>
</Window>
