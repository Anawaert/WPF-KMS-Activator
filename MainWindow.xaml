<Window x:Class="KMS_Activator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib" 
        xmlns:local="clr-namespace:KMS_Activator"
        mc:Ignorable="d"
        Title="Anawaert KMS Activator" Height="270" Width="540"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Window.Resources>
        <System:Boolean x:Key="IsTrue">True</System:Boolean>
        <System:Boolean x:Key="IsFalse">False</System:Boolean>
    </Window.Resources>
    
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="KMS 服务器选择" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="等线 Light" FontSize="15"></Label>
        <ComboBox x:Name="selectServer_ComboBox" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" Margin="0,10,0,10" FontSize="13" FontFamily="等线 Light" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <ComboBoxItem Content="Anawaert KMS 服务器" IsSelected="True"></ComboBoxItem>
        </ComboBox>
        <Button x:Name="addServerName_Button" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Left" Width="25" Margin="15,10,15,10" Content="+" FontFamily="楷体" FontSize="15" Cursor="Hand" Click="addServerName_Button_Click"></Button>
        <Button x:Name="deleteServerName_Button" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Right" Width="25" Margin="15,10,15,10" Content="-" FontFamily="楷体" FontSize="15" Cursor="Hand" Click="deleteServerName_Button_Click"></Button>
        <TextBox x:Name="addServerName_TextBox" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" Margin="0,10,0,10" FontSize="13" FontFamily="等线 Light" VerticalContentAlignment="Center" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" Visibility="Hidden"></TextBox>
        <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="版本信息" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="等线 Light" FontSize="15"></Label>
        <Label x:Name="winVersion_Label" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="等线 Light" FontSize="13" Foreground="SkyBlue"></Label>
        <Label x:Name="officeVersion_Label" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontFamily="等线 Light" FontSize="13" Foreground="Orange"></Label>
        <GridSplitter Grid.Column="1" Grid.RowSpan="3"></GridSplitter>
