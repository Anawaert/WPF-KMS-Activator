        <ComboBox x:Name="WinVersion_ComboBox" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="4" Margin="45,10,45,10" FontSize="15" FontFamily="等线 Light" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
