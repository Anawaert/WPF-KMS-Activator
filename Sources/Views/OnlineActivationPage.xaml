<Page x:Class="Activator.Views.OnlineActivationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:v="clr-namespace:Activator.Views"
      xmlns:vm="clr-namespace:Activator.ViewModels"
      xmlns:cvter="clr-namespace:Activator.Converters"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="960"
      d:DataContext="{d:DesignInstance Type=vm:OnlineActivationViewModel, IsDesignTimeCreatable=False}"
      Title="OnlineActivationPage">
    
    <!-- 基本完工，等待未来加入对多语言的支持即可 -->

    <Page.Resources>
        <cvter:BoolToVisibilityCvter x:Key="BooleanToVisibilityConverter"></cvter:BoolToVisibilityCvter>
        <cvter:IsRunningToIsEnabledMultiValueCvter x:Key="IsRunningToIsEnabledMultiValueCvter"></cvter:IsRunningToIsEnabledMultiValueCvter>
    </Page.Resources>
    
    <!-- 在页面加载时执行加载设置的命令 -->
    <!-- Execute the command to load settings when the page is loaded -->
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadSettingsCommand}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <StackPanel Orientation="Vertical">
            <ui:CardExpander Margin="0,0,0,10" IsExpanded="True">
                <ui:CardExpander.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <ui:TextBlock Grid.Row="0" FontTypography="Body" Text="激活模式"></ui:TextBlock>

                        <ui:TextBlock Grid.Row="1" Foreground="{ui:ThemeResource ResourceKey=TextFillColorSecondaryBrush}"
                                      Text="选择激活 Windows 或 Office 产品">
                        </ui:TextBlock>
                    </Grid>
                </ui:CardExpander.Header>

                <StackPanel Orientation="Vertical">
                    <RadioButton x:Name="activateWindowsRadioButton" Content="激活 Microsoft Windows"
                                 IsChecked="{Binding IsWindowsActivationMode, Mode=TwoWay}" HorizontalAlignment="Left">
                        <!-- 在选中时执行保存设置的命令，下同 -->
                        <!-- Execute the command to save settings when checked, and so on -->
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Checked">
                                <i:InvokeCommandAction Command="{Binding SaveSettingsCommand}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>

                    <RadioButton x:Name="activateOfficeRadioButton" Content="激活 Microsoft Office"
                                 IsChecked="{Binding IsOfficeActivationMode, Mode=TwoWay}" HorizontalAlignment="Left">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Checked">
                                <i:InvokeCommandAction Command="{Binding SaveSettingsCommand}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>
                </StackPanel>
            </ui:CardExpander>

            <ui:CardControl Margin="0,0,0,10">
                <ui:CardControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <ui:TextBlock Grid.Row="0" FontTypography="Body" Text="服务器"></ui:TextBlock>

                        <ui:TextBlock Grid.Row="1" Foreground="{ui:ThemeResource ResourceKey=TextFillColorSecondaryBrush}"
                                      Text="选择在线激活所使用的服务器">
                        </ui:TextBlock>
                    </Grid>
                </ui:CardControl.Header>

                <StackPanel Orientation="Vertical">
                    <!-- 所有服务器列表的 ComboBox，需要将更新源触发器设置为 PropertyChanged以避免出现数据源更新问题 -->
                    <!-- ComboBox for all server lists, need to set the update source trigger to PropertyChanged to avoid data source update issues -->
                    <ComboBox x:Name="selectServerComboBox" Background="Transparent"
                              ItemsSource="{Binding Servers, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                              SelectedIndex="{Binding SelectedServerIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                              SelectedItem="{Binding SelectedServerContentString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding SaveSettingsCommand}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>
                </StackPanel>
            </ui:CardControl>
            
            <!-- 暂时删去：手动续签功能 -->
            <!-- Temporarily removed: manual renewal function -->
